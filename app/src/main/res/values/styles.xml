<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/ThemeGoalDialogAlert</item>
        <item name="android:datePickerDialogTheme">@style/GoalDatePickerTheme</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="GoalDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/GoalDatePickerStyle</item>
    </style>

    <style name="GoalDatePickerStyle" parent="android:style/Widget.Material.DatePicker">
        <item name="android:theme">@style/CalendarViewCustomTheme</item>
        <item name="android:headerBackground">@color/colorAccent</item>
        <item name="android:background">@color/darkmodeBackgroundLight</item>
    </style>

    <style name="CalendarViewCustomTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/darkmodeTextLight</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/darkmodeTextLight</item>
        <item name="android:weekNumberColor">@color/colorAccent</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/darkmodeTextLight</item>
    </style>
    
    <style name="GoalTracker.TextAppearanceLightTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkmodeTextLight</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/darkmodeTextLight</item>
        <item name="android:unfocusedMonthDateColor">@color/darkmodeTextLight</item>
        <item name="android:weekDayTextAppearance">@style/GoalTracker.TextAppearanceLightTheme</item>
        <item name="android:dateTextAppearance">@style/GoalTracker.TextAppearanceLightTheme</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/GoalTracker.TextAppearanceLightTheme</item>
    </style>

    <!-- Style for a Lable in the goal editor -->
    <style name="GoalEditorLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/darkmodeTextLight</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24dp</item>

        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for a Category in the goal editor -->
    <style name="GoalEditorCategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Style for an EditText field in the goal editor -->
    <style name="GoalEditorFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorHint">@color/darkmodeTextDark</item>
        <item name="android:textColor">@color/darkmodeTextLight</item>
        <item name="android:backgroundTint">@color/darkmodeTextDark</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="GoalEditorSpinnerStyle">
        <item name="android:backgroundTint">@color/darkmodeTextDark</item>
        <item name="android:popupBackground">@color/darkmodePrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GoalEditorSeparatorStyle">
        <item name="android:background">@color/darkmodeTextDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="GoalEditorCategoryCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the measurement units for an EditText field in the goal editor -->
    <style name="GoalEditorUnitsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/darkmodeTextDark</item>
    </style>

    <style name="ThemeGoalDialogAlert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/darkmodeBackground</item>
        <item name="android:textColor">@color/darkmodeTextLight</item>
        <item name="android:textColorPrimary">@color/darkmodeTextLight</item>
        <item name="android:textColorSecondary">@color/darkmodeTextDark</item>
        <item name="android:titleTextColor">@color/darkmodeTextLight</item>
    </style>

</resources>
