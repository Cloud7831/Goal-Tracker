<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/darkmodeBackground"
    android:paddingBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkmodeTextLight"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_centerVertical="true"
                tools:text="Learn Japanese"/>

            <TextView
                android:id="@+id/streak_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkmodeTextDark"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="30days"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/scheduled_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkmodeTextDark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:layout_centerVertical="true"
            tools:text="From 6:30pm - 7:30pm"/>

    </LinearLayout>

</RelativeLayout>